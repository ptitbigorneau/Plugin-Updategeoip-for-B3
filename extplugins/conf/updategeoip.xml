<configuration plugin="updategeoip">
    <settings name="settings">
<!--min level required to use command -->
		<set name="updategeoiplevel">100</set>
<!--day of the month for the auto-update-->
		<set name="updateday">2</set>
<!--path folder GeoIP-->
        <set name="geoippath">b3/extplugins/GeoIP/</set>
<!--url for update GeoIP-->
   	    <set name="geoipurl">http://geolite.maxmind.com/download/geoip/database/GeoLiteCountry/GeoIP.dat.gz</set>		
	
	</settings>
</configuration>